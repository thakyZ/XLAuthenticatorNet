<Window x:Class="XLAuthenticatorNet.Windows.UpdateLoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:self="clr-namespace:XLAuthenticatorNet"
        xmlns:viewModel="clr-namespace:XLAuthenticatorNet.Models.ViewModel"
        Title="{Binding Title}"
        Width="269.186"
        Height="170.088"
        d:DataContext="{d:DesignInstance viewModel:UpdateLoadingWindowViewModel}"
        AllowsTransparency="True"
        Background="Transparent"
        FontFamily="{materialDesign:MaterialDesignFont}"
        Icon="{Binding Source={x:Static self:App.Icon}}"
        ResizeMode="NoResize"
        TextElement.FontWeight="Medium"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        mc:Ignorable="d">
  <Grid Margin="0,0,0,0">
    <materialDesign:Card Height="{Binding UpdateLoadingCardHeight}"
                         Margin="3,0,3,0"
                         Background="{DynamicResource MaterialDesignPaper}">
      <Grid Margin="16,16,16,16">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto" />
          <RowDefinition Height="*" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0"
                   HorizontalAlignment="Center"
                   Foreground="{DynamicResource MaterialDesignBody}"
                   Text="{Binding UpdateCheckLabel}" />
        <ProgressBar Grid.Row="1"
                     Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"
                     Height="Auto"
                     Margin="0,12,0,12"
                     IsIndeterminate="True"
                     Style="{StaticResource MaterialDesignCircularProgressBar}"
                     Value="0" />
        <TextBlock Grid.Row="2"
                   Margin="0,5,0,0"
                   Foreground="DarkGray"
                   Text="{Binding AutoLoginHintLabel}"
                   TextAlignment="Center" />
        <TextBlock Grid.Row="3"
                   Margin="0,5,0,0"
                   Foreground="DarkGray"
                   Text="{Binding ResetUidCacheHintLabel}"
                   TextAlignment="Center" />
      </Grid>
    </materialDesign:Card>
  </Grid>
</Window>